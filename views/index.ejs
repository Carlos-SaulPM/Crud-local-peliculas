<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous" />
  <style>
    hmtl,
    body {
      width: 100vw;
      height: 100vh;
      background-color: #e8f1f5;
    }
  </style>
  <title>Películas</title>
</head>

<body>
  <div class="d-flex container justify-content-start flex-column align-items-center flex-nowrap">
    <br /><br /><br /><br />
    <h1>PELÍCULAS</h1>
    <br /><br />
    <div class="container d-flex">
      <a class="btn btn-primary" href="/agregar" role="button">Agregar película</a>
    </div>
    <br />
    <div class="container">
      <table class="table table-striped table-hover align-middle text-center">
        <thead class="table-dark">
          <tr>
            <th>Titulo</th>
            <th>Fecha</th>
            <th>Sinopsis</th>
            <th>Visto</th>
            <th>Editar</th>
            <th>Eliminar</th>
          </tr>
        </thead>
        <tbody>
          <% if (peliculas.length>=0) { peliculas.forEach(pelicula => {%>
          <tr>
            <td><%= pelicula.titulo %></td>
            <td><%= pelicula.fecha %></td>
            <td><%= pelicula.sinopsis %></td>
            <td><%= (pelicula.visto)? "Visto":"Sin ver" %></td>
            <td>
              <a href="/pelicula/editar/<%= pelicula.id %>"><img width="28" height="28" src="https://img.icons8.com/color/48/edit--v1.png" alt="edit--v1" /></a>
            </td>
            <td>
              <a href="/pelicula/eliminar/<%= pelicula.id %>">
                <svg xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" width="28" height="28" viewBox="0,0,256,256">
                  <g fill="#c95151" fill-rule="nonzero" stroke="none" stroke-width="1" stroke-linecap="butt" stroke-linejoin="miter" stroke-miterlimit="10" stroke-dasharray="" stroke-dashoffset="0" font-family="none" font-weight="none" font-size="none" text-anchor="none" style="mix-blend-mode: normal">
                    <g transform="scale(8.53333,8.53333)">
                      <path d="M13,3c-0.26757,-0.00363 -0.52543,0.10012 -0.71593,0.28805c-0.1905,0.18793 -0.29774,0.44436 -0.29774,0.71195h-5.98633c-0.36064,-0.0051 -0.69608,0.18438 -0.87789,0.49587c-0.18181,0.3115 -0.18181,0.69676 0,1.00825c0.18181,0.3115 0.51725,0.50097 0.87789,0.49587h18c0.36064,0.0051 0.69608,-0.18438 0.87789,-0.49587c0.18181,-0.3115 0.18181,-0.69676 0,-1.00825c-0.18181,-0.3115 -0.51725,-0.50097 -0.87789,-0.49587h-5.98633c0,-0.26759 -0.10724,-0.52403 -0.29774,-0.71195c-0.1905,-0.18793 -0.44836,-0.29168 -0.71593,-0.28805zM6,8v16c0,1.105 0.895,2 2,2h14c1.105,0 2,-0.895 2,-2v-16z"></path>
                    </g>
                  </g>
                </svg>
              </a>
            </td>
          </tr>
          <% }) } %>
        </tbody>
      </table>
    </div>
  </div>
</body>

</html>